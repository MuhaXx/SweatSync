<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="/editUserInfo.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>


<body>
    

        <div class="container2">
            <h1>Edit Personal Information</h1>
        </div>
        <div class="wrapper1">
            <form action="/profile/userinfo/edit" method="POST">
                <!-- Username -->
                <div class="input">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>"
                        required>
                </div>
                <!-- Email -->
                <div class="input">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                </div>
                <!-- Age -->
                <div class="input">
                    <label for="age" class="form-label">Age</label>
                    <input type="number" class="form-control" id="age" name="age" value="<%= user.age %>" required>
                </div>
                <!-- Gender -->
                <div class="input">
                    <label for="gender" class="form-label">Gender</label>
                    <select class="form-select" id="gender" name="gender" required>
                        <option value="male" <%=user.gender==='male' ? 'selected' : '' %>>Male</option>
                        <option value="female" <%=user.gender==='female' ? 'selected' : '' %>>Female</option>
                    </select>
                </div>
                <!-- Weight -->
                <div class="input">
                    <label for="weight" class="form-label">Weight (kg)</label>
                    <input type="number" class="form-control" id="weight" name="weight" value="<%= user.weight %>"
                        required>
                </div>
                <!-- Height -->
                <div class="input">
                    <label for="height" class="form-label">Height (cm)</label>
                    <input type="number" class="form-control" id="height" name="height" value="<%= user.height %>"
                        required>
                </div>
                <!-- Experience -->
                <div class="input">
                    <label for="experience" class="form-label">Experience</label>
                    <select class="form-select" id="experience" name="experience" required>
                        <option value="beginner" <%=user.experience==='beginner' ? 'selected' : '' %>>Beginner</option>
                        <option value="intermediate" <%=user.experience==='intermediate' ? 'selected' : '' %>
                            >Intermediate</option>
                        <option value="advanced" <%=user.experience==='advanced' ? 'selected' : '' %>>Advanced</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="footer">
            <%- include('partials/footer') %>
        </div>

</body>

</html>